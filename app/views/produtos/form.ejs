            <label for="descricao">Descricao</label> 
            <textarea id="descricao" cols="10" rows="10" name="descricao" placeholder="Fale sobre o livro"></textarea>
        </div>
        <input type="submit" value="gravar"/>
    </form>
</body>
</html>